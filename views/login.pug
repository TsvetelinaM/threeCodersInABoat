extends layout/main
append head
    link(rel="stylesheet", href="/libs/bootstrap/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="/static/css/error.css")
    title braindead | you're lazy
append header
    div.row
        div.Absolute-Center.is-Responsive
            div(id="logo-container")
            div.col-sm-12.col-md-10.col-md-offset-1
                form(action="" id="loginForm")
                    div.form-group.input-group
                        span.input-group-addon
                            i.glyphicon.glyphicon-user
                        input.form-control(type="text" name='username' placeholder="username")
                    div.form-group.input-group
                        span.input-group-addon
                            i.glyphicon.glyphicon-lock
                        input.form-control(type="password" name='username' placeholder="password")
                    div.checkbox
                        label
                            input(type="checkbox")
                            |I agree to the 
                            a(href="#")
                            | Terms and Conditions
                    div.form-group
                        button.btn.btn-def.btn-block(type="button")
                            |Login
                    div.form-group.text-center
                        a(href="#")
                            |Forgot Password
                        |&nbsp;|&nbsp;
                        a(href='/register') 
                            |New User
