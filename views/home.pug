extends layout/main
append head
    link(rel="stylesheet", href="/libs/bootstrap/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="/static/css/home.css")
    title braindead | you're lazy
append header
    form(action = '/login' method = 'post')
        label(for = 'username') username
        input(type = 'text' name = 'username')
        br
        label(for = 'password') password
        input(type = 'password' name = 'password')
        br
        button(type = 'submit') login
append main
    // не слагай br, ще ползваме css-a
    h1 this is the website, welcome
    p some fancy explanation about the purpose of the site
    form(action = '/register' method = 'post')
        label(for = 'username') username
        input(type = 'text' name = 'username')
        label(for = 'email') email
        input(type = 'email' name = 'email')
        label(for = 'password') password
        input(type = 'password' name = 'password')
        label(for = 'password') re-password
        input(type = 'password' name = 'password')
        button(type = 'submit') register
        each val in articles 
            h1= val.title
            p= val.description
            img(src= val.urlToImage)
            a(href= val.url) source