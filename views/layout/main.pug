<!DOCTYPE html>
html(lang="en")
	block head
		head
			meta(charset="UTF-8")
			meta(name="viewport", content="width=device-width, initial-scale=1.0")
			meta(http-equiv="X-UA-Compatible", content="ie=edge")
			link(rel="icon", href="/static/imgs/sunSystem.png")
			link(rel="stylesheet", href="/libs/bootstrap/dist/css/bootstrap.min.css")
			link(rel="stylesheet", href="/static/css/main.css")

	body
		header.main-header
			nav.navbar.navbar-default
				div.container
					div.navbar-header
						a.navbar-brand(href='/')
							span the
							| sober
							span news
					ul.nav.navbar-nav
						li
							a(href='/world') World
						li
							a(href='/sport') Sport
						li
							a(href='/culture') Culture
						li
							a(href='/lifestyle') Lifestyle
						li
							a(href='/enviroment') Enviroment
					form.navbar-form.navbar-right(action='/search' method='get')
						.input-group
							input.form-control(type='text', placeholder='Search')
							.input-group-btn
								button.btn.btn-default(type='submit')
									i.glyphicon.glyphicon-search
					ul.nav.navbar-nav.navbar-right
						if user
							li
								a(href='/profile')= user.username
							li
								a(href='/logout') Log Out
						else
							li
								a(href='/login') Log In
			block header
		main.main-container
			block main

footer.main-footer
	nav.navbar.navbar-default
		.container
			ul.nav.navbar-nav
				li
					a(href='/') Home
				li
					a(href='/about') About
